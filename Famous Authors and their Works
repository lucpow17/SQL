//* Show the title and release year of each book along with the last name of the author, ordered by oldest to newest releases.*//

SELECT authors.Lastname, books.title, ReleaseYear FROM authors
    JOIN books
    ON authors.id = books.author_id
    ORDER BY ReleaseYear asc;
 


//* Show the book title, release year, and author's last name only for the authors that have passed away*//
 
SELECT books.title, books.ReleaseYear, authors.Lastname FROM books
    JOIN authors
    ON books.author_id = authors.id
    WHERE authors.YearofDeath > 0
    ORDER BY ReleaseYear asc; 



//* Show the title and author's last name for the books written by Americans since the start of the 21st century *//
SELECT books.title, authors.lastname FROM authors
    JOIN books
    ON authors.id = books.author_id
    WHERE books.releaseyear >= 2000
    AND authors.nationality = 'American'
    ORDER BY releaseyear desc; 
  


//* Show the breakdown by nationality of the number of authors from each country and how many books they have written cumulatively, ordered by most books written to least books written *// 
  
SELECT authors.nationality, COUNT(DISTINCT authors.lastname) as '# of Authors', COUNT(books.id) as '# of Books' FROM books
    JOIN authors
    ON authors.id = books.author_id
    GROUP BY authors.nationality
    ORDER BY COUNT (books.title) desc; 
