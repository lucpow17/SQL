-- Create a clothing store database

CREATE TABLE store (
  id INTEGER PRIMARY KEY, 
  name TEXT, 
  stock INTEGER, 
  production_cost INTEGER, 
  price INTEGER);

INSERT INTO store VALUES (1,'blue_tshirt', 25, 10, 15);
